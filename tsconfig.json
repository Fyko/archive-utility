{
	"compileOnSave": true,
	"compilerOptions": {
		"baseUrl": ".",
		"alwaysStrict": true,
		"lib": ["esnext"],
		"module": "ESNext",
		"noUnusedParameters": true,
		"sourceMap": true,
		"skipLibCheck": true,
		"moduleResolution": "node",
		"noUnusedLocals": true,
		"removeComments": false,
		"target": "ES2020",
		"strictNullChecks": true,
		"outDir": "dist",
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"paths": {
			"#util": ["src/util/index.ts"],
			"#structs": ["src/structures/index.ts"],
			"#const": ["src/util/constants.ts"],
			"#logger": ["src/util/logger.ts"],
			"#hasura": ["src/util/hasura.ts"]
		}
	},
	"exclude": [
		"node_modules"
	],
	"include": [
		"src"
	]
}
